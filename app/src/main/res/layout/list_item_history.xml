<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/history_item_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <WebView
            android:id="@+id/history_item_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#5c6763" />

        <ImageView
            android:id="@+id/history_item_eye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_eye" />

        <ImageView
            android:id="@+id/history_item_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/history_item_img"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_trash"
            android:tint="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/history_item_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/history_item_img"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:layout_toStartOf="@id/history_item_delete"
            android:src="@drawable/ic_share"
            android:tint="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/history_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/history_item_img"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/history_item_share"
            android:text="Title"
            android:textColor="#000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/history_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/history_item_title"
            android:layout_margin="8dp"
            android:layout_toStartOf="@+id/history_item_share"
            android:text="13 oct 2017"
            android:textColor="#aaa"
            android:textSize="20dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>